---
const { link, title } = Astro.props;
interface Props {
  link: string;
  title: string;
}
---

<div class="text-center my-5">
  <a href={link} class="border-red-400/80 bg-white border-2 py-2 px-3 rounded-xl text-red-700 hover:bg-red-500/80 hover:text-white duration-200 hover:border-red-400/70" >{title}</a>
</div>