---
export const prerender = false;
import { sanityClient } from "sanity:client";
const categories = await sanityClient.fetch(`*[_type == "category"]`)
---
<div class="flex items-center justify-center gap-4 flex-wrap mt-4 mx-5">
  {
    categories.map((category: any) => {
      return (<a class="border-red-400/80 bg-white border-2 py-2 px-3 rounded-xl text-red-900 hover:bg-red-500/80 hover:text-white duration-200 hover:border-red-400/70" href={'/blog/tag/' + category.slug.current}>{category.title}</a>)
    })
  }
</div>
