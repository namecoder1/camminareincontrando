---
const { image, title, description } = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg font-poppins">
  <div class="flex-shrink-0">
    <img class="h-48 w-full object-cover" src={image} alt="" >
  </div>
  <div class="flex flex-1 flex-col justify-between bg-white p-6">
    <div class="flex-1">
      <p class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">{title}</p>
        <p class="mt-3 text-base text-gray-500">{description}</p>
      </p>
    </div>
  </div>
</div>